<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dexterlabs.sahil.capture.MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18dp"
        android:text="Click for capturing real time text from image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/bRealTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RealTime"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
       />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bRealTime"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:layout_marginTop="38dp"
        android:text="Click here for converting saved image to text" />

    <Button
        android:id="@+id/bImageToText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImageToText"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView3"
         />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bImageToText"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginTop="47dp"
        android:textStyle="bold"
        android:text="Click Here to scan QRcode and Barcode" />

    <Button
        android:id="@+id/bScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:text="Scan" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bScan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textStyle="bold"
        android:text="Create your own QRCode and save in gallery"
        android:textAlignment="center"
        android:textSize="18dp" />

    <Button
        android:id="@+id/bGenerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bScan"
        android:layout_alignStart="@+id/bScan"
        android:layout_below="@+id/textView5"
        android:text="Generate" />
</RelativeLayout>
